{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "build": {
      "mode": "primary",
      "description": "Senior React Native developer and project coordinator",
      "prompt": "{file:./prompts/react-native-build.txt}",
      "temperature": 0.3,
      "permission": {
        "bash": {
          "pod install": "allow",
          "pnpm exec react-native run-*": "allow",
          "pnpm exec react-native start": "allow",
          "pnpm exec react-native log-*": "allow",
          "git status": "allow",
          "git diff": "allow",
          "git log*": "allow",
          "git add*": "allow",
          "git commit*": "allow",
          "git push": "ask",
          "pnpm install": "ask",
          "pnpm install *": "allow",
          "ls*": "allow",
          "cat*": "allow",
          "grep*": "allow",
          "*": "ask"
        },
        "edit": "ask"
      }
    },
    "plan": {
      "mode": "primary",
      "description": "Analyzes code and creates implementation plans without making changes",
      "temperature": 0.2,
      "tools": {
        "write": false,
        "edit": false
      },
      "permission": {
        "bash": {
          "git diff": "allow",
          "git log*": "allow",
          "git status": "allow",
          "ls*": "allow",
          "cat*": "allow",
          "grep*": "allow",
          "find*": "allow",
          "pnpm test": "allow",
          "pnpm test:coverage": "allow",
          "*": "deny"
        },
        "edit": "deny",
      }
    }
  }
}
